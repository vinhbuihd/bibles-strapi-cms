{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book",
    "description": "Sách Kinh Thánh (Tân Ước, Cựu Ước)"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "testament": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::testament.testament",
      "inversedBy": "books"
    },
    "chapters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::chapter.chapter",
      "mappedBy": "book"
    }
  }
}
